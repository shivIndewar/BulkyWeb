@model Product

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white">Delete Product</h2>
            </div>

        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">

                @*  <div asp-validation-summary="None"></div> *@
                <div class="form-floating py-2 col-12">
                    <input asp-for="Title" disabled type="text" class="form-control border-0 shadow" />
                    <label asp-for="Title" disabled class="ms-2">Product Title</label>

                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Description" disabled type="text" class="form-control border-0 shadow" />
                    <label asp-for="Description" class="ms-2">Product Description</label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ISBN" disabled type="text" class="form-control border-0 shadow" />
                    <label asp-for="ISBN" class="ms-2">ISBN</label>
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Author" disabled type="text" class="form-control border-0 shadow" />
                    <label asp-for="Author" class="ms-2">Author</label>
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ListPrice" disabled type="text" class="form-control border-0 shadow" />
                    <label asp-for="ListPrice" class="ms-2">List Price</label>
                    <span asp-validation-for="ListPrice" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price" disabled type="text" class="form-control border-0 shadow" />
                    <label asp-for="Price" class="ms-2">Price</label>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price50" disabled type="text" class="form-control border-0 shadow" />
                    <label asp-for="Price50" class="ms-2">Price50</label>
                    <span asp-validation-for="Price50" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price100" disabled type="text" class="form-control border-0 shadow" />
                    <label asp-for="Price100" class="ms-2">Price100</label>
                    <span asp-validation-for="Price100" class="text-danger"></span>
                </div>

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary border form-control">
                            Back To List
                        </a>
                    </div>

                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
